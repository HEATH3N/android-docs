{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "filenames",
    "prettier"
  ],
  "rules": {
    "no-bitwise": [2],
    "no-console": [0],
    "no-redeclare": [2],
    "no-undef": [2],
    "no-underscore-dangle": [0],
    "no-unused-vars": [2],
    "no-use-before-define": [0],
    "strict": [0],
    "valid-typeof": 2,

    "filenames/match-regex": [2, "^[a-z_]+(?:.test(?:_cases)?)?$"],

    "prettier/prettier": ["error", {
      "singleQuote": true,
      "printWidth": 120
    }]
  },
  "parserOptions": {
        "sourceType": "module",
    }
}
